#!/usr/bin/env bash
# script that creates a redirect
sudo apt-get update -y
sudo apt-get install -y nginx 

redirection="\tlocation = /redirect_me{\n\t\treturn 301 https://www.youtube.com/watch?v=wpV-gGA4PSk;\t\n\t}"
sudo sed -i "71i\\$redirection" /etc/nginx/sites-enabled/default

sudo /etc/init.d/nginx stop
sudo /etc/init.d/nginx start 
