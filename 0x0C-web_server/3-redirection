#!/usr/bin/env bash
# script that creates a redirect
SRV='server {
	listen 80 default_server;
	listen [::]:80 default_server;
	server_name espikev.tech;
	root /var/www/html;
	index index.html;
	location = /redirect_me {
		return 301 https://www.youtube.com/watch?v=wpV-gGA4PSk;
	}
}'

echo "$SRV" | sudo tee /etc/nginx/sites-enabled/default
sudo /etc/init.d/nginx restart;
